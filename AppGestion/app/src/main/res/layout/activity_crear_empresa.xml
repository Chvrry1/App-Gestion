<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.empresa.CrearEmpresa">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Empresa / Negocio"
        android:textSize="30sp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/icon_empresa"
                android:layout_width="wrap_content"
                app:cardCornerRadius="100dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    android:padding="10dp"
                    android:src="@drawable/company_svgrepo_com">

                </ImageView>


            </androidx.cardview.widget.CardView>
            <EditText
                android:id="@+id/nombre"
                android:layout_toEndOf="@+id/icon_empresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="Nombre de Empresa / Negocio"
                android:maxLines="1"
                android:textColorHint="@color/gray_200"
                android:background="@drawable/style_editext_empresa"
                android:layout_marginHorizontal="20dp">

            </EditText>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/icon_identificador"
                android:layout_width="wrap_content"
                app:cardCornerRadius="100dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    android:padding="10dp"
                    android:src="@drawable/carnet_svgrepo_com">

                </ImageView>


            </androidx.cardview.widget.CardView>
            <EditText
                android:id="@+id/doc_identificador"
                android:layout_toEndOf="@+id/icon_identificador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="Documento Identificador "
                android:maxLines="1"
                android:textColorHint="@color/gray_200"
                android:background="@drawable/style_editext_empresa"
                android:layout_marginHorizontal="20dp">

            </EditText>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/icon_razon_social"
                android:layout_width="wrap_content"
                app:cardCornerRadius="100dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    android:padding="10dp"
                    android:src="@drawable/write_svgrepo_com">

                </ImageView>


            </androidx.cardview.widget.CardView>
            <EditText
                android:id="@+id/razon_social"
                android:layout_toEndOf="@+id/icon_razon_social"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="Razón social "
                android:maxLines="1"
                android:textColorHint="@color/gray_200"
                android:background="@drawable/style_editext_empresa"
                android:layout_marginHorizontal="20dp">

            </EditText>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/icon_numero"
                android:layout_width="wrap_content"
                app:cardCornerRadius="100dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    android:padding="10dp"
                    android:src="@drawable/baseline_local_phone_24">

                </ImageView>


            </androidx.cardview.widget.CardView>
            <EditText
                android:id="@+id/numero_telf"
                android:layout_toEndOf="@+id/icon_numero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="Numero telefónico "
                android:maxLines="1"
                android:textColorHint="@color/gray_200"
                android:background="@drawable/style_editext_empresa"
                android:layout_marginHorizontal="20dp">

            </EditText>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/icon_direccion"
                android:layout_width="wrap_content"
                app:cardCornerRadius="100dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    android:padding="10dp"
                    android:src="@drawable/map_location_pin_svgrepo_com">

                </ImageView>


            </androidx.cardview.widget.CardView>
            <EditText
                android:id="@+id/direccion"
                android:layout_toEndOf="@+id/icon_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="Dirección "
                android:maxLines="1"
                android:textColorHint="@color/gray_200"
                android:background="@drawable/style_editext_empresa"
                android:layout_marginHorizontal="20dp">

            </EditText>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/icon_pais"
                android:layout_width="wrap_content"
                app:cardCornerRadius="100dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    android:padding="10dp"
                    android:src="@drawable/earth_10_svgrepo_com">

                </ImageView>


            </androidx.cardview.widget.CardView>
            <EditText
                android:id="@+id/pais"
                android:layout_toEndOf="@+id/icon_pais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="País "
                android:maxLines="1"
                android:textColorHint="@color/gray_200"
                android:background="@drawable/style_editext_empresa"
                android:layout_marginHorizontal="20dp">

            </EditText>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/icon_capital"
                android:layout_width="wrap_content"
                app:cardCornerRadius="100dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    android:padding="10dp"
                    android:src="@drawable/baseline_location_city_24">

                </ImageView>


            </androidx.cardview.widget.CardView>
            <EditText
                android:id="@+id/capital"
                android:layout_toEndOf="@+id/icon_capital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="Capital "
                android:maxLines="1"
                android:textColorHint="@color/gray_200"
                android:background="@drawable/style_editext_empresa"
                android:layout_marginHorizontal="20dp">

            </EditText>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/style_round_button"
        android:backgroundTint="@color/blue_700"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:text="Guardar"
        android:textColor="@color/white"
        android:textAllCaps="false"/>




</LinearLayout>